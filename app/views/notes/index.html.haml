.wrapper_with_padding

    #notes.clearfix
        - if @notes.empty?
            %p You do not have any notes yet.
            %button.button= link_to "Create one now", new_note_path
        - else
            - @notes.each do |note|
                %a{href: url_for(note)}
                    .note
                        %p.title= note.title
                        %p.date= time_ago_in_words(note.created_at)

    %div= paginate @notes
